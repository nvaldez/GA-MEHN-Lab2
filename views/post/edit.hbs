<h2>Create a new post</h2>

<form action="/post/{{item.id}}?_method=PUT" method="post">
    <p>
        <label for="name">Post Title:</label>
        <input type="text" name="title" id="name" value="{{post.title}}">
    </p>
    <p>
        <label for="description">Post Description:</label>
        <textarea name="description" cols="30" rows="10">{{post.description}}</textarea>
    </p>
    <p>
        <label for="status">Post URL:</label>
        <input type="text" name="url" id="status" value="{{post.url}}">
    </p>
    <p>
        <input type="submit" value="Save">
    </p>
</form>